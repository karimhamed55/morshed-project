@model Morshed.Core.Entities.Tour

@{
    ViewData["Title"] = "Create Tour";
}

<h1>Create New Tour</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ProvinceId" class="form-label">Province</label>
                <select asp-for="ProvinceId" class="form-select" asp-items="ViewBag.Provinces"></select>
            </div>
            <div class="mb-3">
                <label asp-for="Days" class="form-label"></label>
                <input asp-for="Days" class="form-control" min="1" />
                <span asp-validation-for="Days" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create Tour" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
