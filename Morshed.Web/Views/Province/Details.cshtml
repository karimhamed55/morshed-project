@model Morshed.Core.Entities.Province

@{
    ViewData["Title"] = Model.NameEn;
}

<div class="text-center mb-5">
    <h1 class="display-4">@Model.NameEn <span class="text-muted">(@Model.NameAr)</span></h1>
    <p class="lead">@Model.Description</p>
</div>

<!-- Static Map Placeholder -->
<div class="card mb-5 border-pharaonic">
    <div class="card-body text-center bg-light">
        <h3 class="card-title">Map of @Model.NameEn</h3>
        <div style="height: 300px; background-color: #e9ecef; display: flex; align-items: center; justify-content: center; border: 1px dashed var(--gold);">
            <p class="text-muted"><i class="fas fa-map-marked-alt fa-3x mb-3"></i><br>Static Google Map Image Here</p>
        </div>
    </div>
</div>

<h2 class="mb-4 border-bottom border-warning pb-2">Top Places in @Model.NameEn</h2>

<div class="row">
    @foreach (var place in Model.Places)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (place.Images != null && place.Images.Any())
                {
                    <img src="@place.Images.First().Url" class="card-img-top" alt="@place.Name" style="height: 200px; object-fit: cover;">
                }
                else
                {
                    <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" alt="No Image">
                }
                <div class="card-body">
                    <h5 class="card-title">@place.Name</h5>
                    <span class="badge bg-gold text-dark mb-2">@place.Category</span>
                    <p class="card-text text-truncate">@place.Description</p>
                    <p class="small text-muted"><i class="fas fa-map-marker-alt"></i> @place.Address</p>
                    <a asp-controller="Place" asp-action="Details" asp-route-id="@place.Id" class="btn btn-sm btn-primary w-100">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
