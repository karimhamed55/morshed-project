@model IEnumerable<Morshed.Core.Entities.Province>

@{
    ViewData["Title"] = "Provinces";
}

<h1 class="text-center mb-5">Explore Egypt's Provinces</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-pharaonic">
                <img src="@item.ThumbnailUrl" class="card-img-top" alt="@item.NameEn" style="height: 250px; object-fit: cover;">
                <div class="card-body text-center">
                    <h2 class="card-title">@item.NameEn</h2>
                    <h4 class="text-muted">@item.NameAr</h4>
                    <p class="card-text">@item.Description</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-lg">Explore @item.NameEn</a>
                </div>
            </div>
        </div>
    }
</div>
