@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Morshed - Check Your Email</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css?v=1.2">
    <link rel="stylesheet" href="~/css/style.css?v=1.2">
    <link rel="stylesheet" href="~/css/auth.css?v=1.2">

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">
</head>
<body>

    <!-- HEADER -->
    <header>
        <div class="header1">
            <div class="container d-flex justify-content-between align-items-center">
                <ul class="list-inline mt-2 small contact-list">
                    <li class="contact-item"><a href="#"><span class="contact-icon"><i class="fas fa-phone-alt"></i></span> +20 221 121 573</a></li>
                    <li class="list-inline-item head-header"><a asp-controller="Home" asp-action="Index">The official site of Morshed</a></li>
                </ul>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg bg-white shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo-left.png" width="65" height="65">
                    <img src="~/images/Logo-right.png" width="140" height="35" class="mt-1">
                </a>
                <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                    <a asp-controller="Auth" asp-action="Login" class="btn-nav btn-login text-decoration-none">Login</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENT -->
    <section class="register-container">
        <div class="register-card text-center" style="max-width: 500px;">
            <div style="font-size: 4rem; color: var(--turquoise); margin-bottom: 20px;">
                <i class="fas fa-envelope-open-text"></i>
            </div>
            <h2>Check Your Email</h2>
            <p>We have sent a password reset link to your email address.</p>

            <div class="mt-4">
                <a asp-controller="Auth" asp-action="Login" class="btn-submit text-decoration-none" style="display: inline-block; width: auto; padding: 12px 40px;">Back to Login</a>
            </div>
        </div>
    </section>

    <!-- FOOTER -->
    <footer style="font-family: 'Poppins', sans-serif; color:#eaf4f9; background-color:#0e1a24; padding: 20px 0; text-align: center;">
        <p>Copyright © 2025 Morshed.com</p>
    </footer>

</body>
</html>