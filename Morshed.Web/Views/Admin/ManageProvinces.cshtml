@using Morshed.Core.Entities
@model IEnumerable<Province>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Provinces";
}

<!-- نفس ملف الستايل الموحد -->
<link rel="stylesheet" href="~/css/admin_create.css?v=4.0">
<link href="[https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Poppins:wght@300;400;500;600&display=swap](https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Poppins:wght@300;400;500;600&display=swap)" rel="stylesheet">

<div class="container">

    <!-- Header -->
    <div class="admin-header">
        <h2>Egyptian Provinces</h2>
        <p>Manage destinations and their details</p>
    </div>

    <!-- Action Bar -->
    <div class="page-action-header">
        <h4 style="font-family:'Playfair Display'; color:var(--primary-dark); margin:0;">
            Total Provinces (@(Model?.Count() ?? 0))
        </h4>
        <a asp-action="CreateProvince" class="btn-add-main">
            <i class="fas fa-plus"></i> Add New Province
        </a>
    </div>

    <!-- Table -->
    <div class="admin-table-container">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10%;">Image</th>
                    <th style="width: 20%;">Name (En)</th>
                    <th style="width: 20%;">Name (Ar)</th>
                    <th style="width: 35%;">Description</th>
                    <th class="text-center" style="width: 15%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(string.IsNullOrEmpty(item.ThumbnailUrl) ? "/images/default_province.jpg" : item.ThumbnailUrl)"
                                     alt="@item.NameEn"
                                     style="width: 50px; height: 50px; border-radius: 10px; object-fit: cover; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                            </td>
                            <td style="font-weight: 600; color: var(--primary-dark);">@item.NameEn</td>
                            <td style="font-family: 'Amiri', serif; font-size: 1.1rem;">@item.NameAr</td>
                            <td>
                                @{
                                    var desc = item.Description;
                                    if (!string.IsNullOrEmpty(desc) && desc.Length > 60)
                                    {
                                        <span title="@item.Description" class="text-muted">@desc.Substring(0, 60)...</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@item.Description</span>
                                    }
                                }
                            </td>
                            <td class="text-center">
                                <a href="#" class="btn-action-sm btn-edit" title="Edit (Coming Soon)">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- زرار الحذف (مؤقت) -->
                                <button class="btn-action-sm btn-delete" title="Delete" onclick="alert('Delete feature coming soon!')">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <div style="opacity: 0.5;">
                                <i class="fas fa-map-marked fa-3x mb-3 text-muted"></i>
                                <h5 class="text-muted">No provinces added yet.</h5>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>