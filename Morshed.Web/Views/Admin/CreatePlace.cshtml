@using Morshed.Core.Entities
@model Place

@{
    ViewData["Title"] = "Create Place";
}

<div class="container" style="padding-bottom: 500px; padding-top: 20px;">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Add New Place</h2>
        <div>
            <button type="submit" form="createForm" class="btn btn-primary">Save Place</button>
            <a asp-action="ManagePlaces" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </div>

    <form asp-action="CreatePlace" method="post" id="createForm">
        
        <div class="mb-3">
            <label class="form-label">Location (Province)</label>
            <div class="input-group">
                <select asp-for="ProvinceId" class="form-select" asp-items="ViewBag.Provinces" required>
                    <option value="">-- Select Province --</option>
                </select>
                <a asp-action="CreateProvince" class="btn btn-outline-secondary" title="Add New Province">
                    <i class="fas fa-plus"></i> Add New
                </a>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <input asp-for="Address" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3" style="margin-bottom: 200px;">
            <label class="form-label">Category</label>
            <input asp-for="Category" class="form-control" required />
            <small class="form-text text-muted">e.g., Temple, Museum, Restaurant</small>
        </div>

    </form>
</div>
