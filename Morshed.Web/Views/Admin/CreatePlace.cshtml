@using Morshed.Core.Entities
@model Place

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add New Place";
}

<!-- ربط ملف الستايل الموحد -->
<link rel="stylesheet" href="~/css/admin_create.css?v=4.0">
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">


<div class="container">

    <!-- Header -->
    <div class="admin-header">
        <h2>Add New Place</h2>
        <p>Expand our map with Egypt's hidden gems</p>
    </div>

    <!-- The Form Card -->
    <div class="form-card">
        <form asp-action="CreatePlace" method="post" id="createForm" enctype="multipart/form-data">

            <!-- Province Select (Dropdown) -->
            <div class="mb-4">
                <label class="form-label">Location (Province)</label>
                <div class="custom-input-group">
                    <!-- القائمة المنسدلة للمحافظات -->
                    <select asp-for="ProvinceId" class="form-select" asp-items="ViewBag.Provinces" required>
                        <option value="">-- Select Province --</option>
                    </select>
                    <span asp-validation-for="ProvinceId" class="text-danger small"></span>

                    <!-- زرار مختصر لإضافة محافظة لو مش موجودة -->
                    <a asp-action="CreateProvince" class="btn-add-new" title="Add New Province">
                        <i class="fas fa-plus"></i> New Province
                    </a>
                </div>
            </div>

            <!-- Place Name -->
            <div class="mb-4">
                <label asp-for="Name" class="form-label">Place Name</label>
                <input asp-for="Name" class="form-control" placeholder="e.g. Karnak Temple" required />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Address -->
            <div class="mb-4">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" placeholder="e.g. Luxor, East Bank" required />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <!-- Category -->
            <div class="mb-4">
                <label asp-for="Category" class="form-label">Category</label>
                <input asp-for="Category" class="form-control" placeholder="e.g. Temple, Museum, Nature" required />
                <small class="form-text">Choose a category that best describes this place.</small>
                <span asp-validation-for="Category" class="text-danger small"></span>
            </div>

            <!-- Description -->
            <div class="mb-4">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Write a captivating description..."></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <!-- Image Upload (اختياري) -->
            <div class="mb-4">
                <label class="form-label">Place Image</label>
                <input type="file" name="file" class="form-control" accept="image/*" />
                <small class="form-text text-muted">Upload a representative image (JPG/PNG).</small>
            </div>

            <!-- Actions -->
            <div class="form-actions">
                <a asp-action="ManagePlaces" class="btn-cancel">Cancel</a>

                <button type="submit" class="btn-save">
                    <i class="fas fa-save me-2"></i> Save Place
                </button>
            </div>

        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}