@using Morshed.Core.Entities
@model Place

@{
    Layout = "_AdminLayout"; 
    ViewData["Title"] = "Edit Place";
}

<link rel="stylesheet" href="~/css/admin_create.css?v=2.0">
<!-- Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">


<div class="container">

    <!-- Header -->
    <div class="admin-header">
        <h2>Edit Place</h2>
        <p>Update details for <span style="color:var(--primary-dark); font-weight:700;">@Model.Name</span></p>
    </div>

    <!-- The Form Card -->
    <div class="form-card">
        <form asp-action="EditPlace" method="post" id="editForm">
            <input type="hidden" asp-for="Id" />

            <!-- Province Select -->
            <div class="mb-4">
                <label class="form-label">Location (Province)</label>
                <div class="custom-input-group">
                    <select asp-for="ProvinceId" class="form-select" asp-items="ViewBag.Provinces" required>
                        <option value="">-- Select Location --</option>
                    </select>
                    <span asp-validation-for="ProvinceId" class="text-danger small"></span>

                    <!-- زرار إضافة محافظة جديدة (موجود احتياطي) -->
                    <a asp-action="CreateProvince" class="btn-add-new" title="Add New Province">
                        <i class="fas fa-plus"></i> New Province
                    </a>
                </div>
            </div>

            <!-- Name -->
            <div class="mb-4">
                <label class="form-label">Place Name</label>
                <input asp-for="Name" class="form-control" placeholder="e.g. Karnak Temple" required />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Address -->
            <div class="mb-4">
                <label class="form-label">Address</label>
                <input asp-for="Address" class="form-control" placeholder="e.g. Luxor, East Bank" required />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <!-- Category -->
            <div class="mb-4">
                <label class="form-label">Category</label>
                <input asp-for="Category" class="form-control" placeholder="e.g. Temple, Museum, Nature" />
                <small class="form-text">Choose a category that best describes this place.</small>
                <span asp-validation-for="Category" class="text-danger small"></span>
            </div>

            <!-- Description -->
            <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Update the description..."></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <!-- Actions -->
            <div class="form-actions">
                <a asp-action="ManagePlaces" class="btn-cancel">Cancel</a>

                <button type="submit" class="btn-save">
                    <i class="fas fa-save me-2"></i> Save Changes
                </button>
            </div>

        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}