@using Morshed.Core.Entities
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<ApplicationUser>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Manage Users";
}

<link rel="stylesheet" href="~/css/admin_create.css?v=4.0">
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

<div class="container">

    <!-- Header -->
    <div class="admin-header">
        <h2>User Management</h2>
        <p>Manage accounts and permissions</p>
    </div>

    <!-- Action Bar -->
    <div class="page-action-header">
        <h4 style="font-family:'Playfair Display'; color:var(--primary-dark); margin:0;">
            Total Users (@(Model?.Count() ?? 0))
        </h4>
    </div>

    <!-- Table -->
    <div class="admin-table-container">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 25%;">User</th>
                    <th style="width: 30%;">Email</th>
                    <th style="width: 15%;">Role</th>
                    <th class="text-center" style="width: 30%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var user in Model)
                    {
                        var isAdmin = await UserManager.IsInRoleAsync(user, "Admin");

                        <tr>
                            <td>
                                <div style="display:flex; align-items:center; gap:10px;">
                                    <div class="user-avatar-circle" style="background:@(isAdmin ? "var(--gold)" : "var(--turquoise)");">
                                        @(user.UserName?.Substring(0, 1).ToUpper() ?? "U")
                                    </div>
                                    <div>
                                        <span style="font-weight: 600; color: var(--primary-dark); display:block;">@user.UserName</span>
                                        <span style="font-size:0.8rem; color:#888;">ID: ...@user.Id.Substring(user.Id.Length - 5)</span>
                                    </div>
                                </div>
                            </td>
                            <td style="color: #555;">@user.Email</td>
                            <td>
                                @if (isAdmin)
                                {
                                    <span class="badge bg-warning text-dark border border-warning">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-muted border">User</span>
                                }
                            </td>
                            <td class="text-center">
                                <div style="display:flex; justify-content:center; gap:5px;">

                                    @if (!isAdmin)
                                    {
                                        <!-- Assign Admin Role -->
                                        <form asp-action="AssignRole" method="post" style="display:inline;">
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <input type="hidden" name="role" value="Admin" />
                                            <button type="submit" class="btn-action-sm btn-edit" title="Make Admin">
                                                <i class="fas fa-user-shield"></i> Make Admin
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <!-- Remove Admin Role -->
                                        <form asp-action="RemoveRole" method="post" style="display:inline;">
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <input type="hidden" name="role" value="Admin" />
                                            <button type="submit" class="btn-action-sm" style="background:#eee; color:#666;" title="Remove Admin">
                                                <i class="fas fa-user-minus"></i> Demote
                                            </button>
                                        </form>
                                    }

                                    <!-- Delete User -->
                                    <form asp-action="DeleteUser" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="btn-action-sm btn-delete" title="Delete User">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5">
                            <h5 class="text-muted">No users found.</h5>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>