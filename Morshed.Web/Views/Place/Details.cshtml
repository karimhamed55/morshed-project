@model Morshed.Core.Entities.Place

@{
    Layout = null; // عشان نفصلها عن اللايوت العام
    ViewData["Title"] = Model.Name;

    // منطق اختيار الصورة الرئيسية (عشان نتفادى الإيرور)
    var mainImage = "https://via.placeholder.com/800x450?text=No+Image"; 
    if (Model.Images != null && Model.Images.Any())
    {
        mainImage = Model.Images.First().Url; 
    }

    // تجهيز رابط الخريطة بشكل صحيح
    var provinceName = Model.Province != null ? Model.Province.NameEn : "Egypt";
    var mapQuery = $"{Model.Name}, {provinceName}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Morshed - @Model.Name</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css?v=1.2">
    <link rel="stylesheet" href="~/css/auth.css?v=1.2">
    <link rel="stylesheet" href="~/css/nav_buttons.css?v=1.2">
    <!-- تأكد من وجود ملف الستايل المجمع -->
    <link rel="stylesheet" href="~/css/admin_create.css?v=5.0">

    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Reey&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Wrapper عشان يزق الفوتر لتحت -->
    <div class="main-wrapper">

        <!-- HEADER -->
        <header>
            <div class="header1">
                <div class="container d-flex justify-content-between align-items-center">
                    <ul class="list-inline mt-2 small contact-list">
                        <li class="contact-item"><a href="#"><span class="contact-icon"><i class="fas fa-phone-alt"></i></span> +20 221 121 573</a></li>
                        <li class="list-inline-item head-header"><a asp-controller="Home" asp-action="Index">The official site of Morshed</a></li>
                    </ul>
                </div>
            </div>
            <nav class="navbar navbar-expand-lg bg-white shadow-sm sticky-top">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo-left.png" width="65" height="65">
                        <img src="~/images/Logo-right.png" width="140" height="35" class="mt-1">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="mainNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 mx-auto">
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a></li>
                            <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Packages">TOUR PACKAGES</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">CONTACT US</a></li>
                        </ul>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="Profile" class="btn-nav btn-login ms-3">My Profile</a>
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn-nav btn-signup ms-2">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Register" class="btn-nav btn-signup ms-3 text-decoration-none">Signup</a>
                            <a asp-controller="Account" asp-action="Login" class="btn-nav btn-login ms-3 text-decoration-none">Login</a>
                        }
                    </div>
                </div>
            </nav>
        </header>

        <!-- CONTENT -->
        <div class="container my-5" style="min-height: 800px;">

            <!-- Breadcrumb / Back -->
            <div class="mb-4">
                <a asp-controller="Province" asp-action="Details" asp-route-id="@Model.ProvinceId" class="text-decoration-none text-muted">
                    <i class="fas fa-arrow-left"></i> Back to @(Model.Province?.NameEn ?? "Provinces")
                </a>
            </div>

            <div class="row g-5">
                <!-- Left Column: Content -->
                <div class="col-lg-8">

                    <!-- Image Slider -->
                    <div id="placeCarousel" class="carousel slide place-carousel" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @if (Model.Images != null && Model.Images.Any())
                            {
                                var first = true;
                                foreach (var img in Model.Images)
                                {
                                    <div class="carousel-item @(first ? "active" : "")">
                                        <img src="@img.Url"
                                             class="d-block w-100"
                                             alt="@Model.Name"
                                             style="height: 450px; object-fit: cover;"
                                             onerror="this.onerror=null; this.src='@mainImage';">
                                    </div>
                                    first = false;
                                }
                            }
                            else
                            {
                                <div class="carousel-item active">
                                    <img src="@mainImage"
                                         class="d-block w-100"
                                         alt="@Model.Name"
                                         style="height: 450px; object-fit: cover;"
                                         onerror="this.onerror=null; this.src='/images/default.jpg';">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#placeCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#placeCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                    <!-- Title & Info -->
                    <h1 class="place-title">@Model.Name</h1>
                    <div class="place-meta">
                        <span class="meta-badge"><i class="fas fa-tag"></i> @Model.Category</span>
                        <span class="meta-badge"><i class="fas fa-map-marker-alt"></i> @Model.Address</span>
                    </div>

                    <!-- Description -->
                    <p class="place-desc">
                        @Model.Description
                        <br><br>
                        Experience the magic of this location. Whether you are interested in history, nature, or culture, @Model.Name offers a unique glimpse into the rich heritage of Egypt.
                    </p>

                    <hr class="my-5" style="opacity:0.1">

                    <!-- Reviews -->
                    <div class="reviews-container">
                        <h3 class="reviews-header">Visitor Reviews</h3>

                        @if (Model.Reviews != null && Model.Reviews.Any())
                        {
                            foreach (var review in Model.Reviews)
                            {
                                <div class="review-card">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="review-user">
                                            <div class="user-avatar-circle" style="width:40px; height:40px; background:var(--primary-dark); color:white; display:flex; align-items:center; justify-content:center; border-radius:50%;">
                                                @(review.User?.UserName?.Substring(0, 1).ToUpper() ?? "U")
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold">@(review.User?.UserName ?? "Traveler")</h6>
                                                <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                            </div>
                                        </div>
                                        <div class="review-rating">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                        </div>
                                    </div>
                                    <p class="mt-3 mb-0 text-secondary">"@review.Comment"</p>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4 text-muted">
                                <i class="far fa-comment-dots fa-2x mb-2"></i>
                                <p>No reviews yet. Be the first to share your experience!</p>
                            </div>
                        }

                        <!-- Add Review Form -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="review-form-card">
                                <h4 class="mb-3" style="font-family:'Playfair Display';">Leave a Review</h4>
                                <form asp-action="AddReview" method="post">
                                    <input type="hidden" name="placeId" value="@Model.Id" />
                                    <div class="row g-3">
                                        <div class="col-md-4">
                                            <label class="form-label">Rating</label>
                                            <select name="rating" class="form-select">
                                                <option value="5">5 - Excellent</option>
                                                <option value="4">4 - Very Good</option>
                                                <option value="3">3 - Good</option>
                                                <option value="2">2 - Fair</option>
                                                <option value="1">1 - Poor</option>
                                            </select>
                                        </div>
                                        <div class="col-md-8">
                                            <label class="form-label">Comment</label>
                                            <textarea name="comment" class="form-control" rows="1" required placeholder="Share your thoughts..."></textarea>
                                        </div>
                                        <div class="col-12 text-end">
                                            <button type="submit" class="btn btn-save px-4">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-light border mt-4 text-center">
                                <a asp-controller="Auth" asp-action="Login" style="color:var(--turquoise); font-weight:bold;">Login</a> to write a review.
                            </div>
                        }
                    </div>
                </div>

                <!-- Right Column: Sidebar -->
                <div class="col-lg-4">

                    <!-- Actions Card -->
                    <div class="sidebar-card">
                        <h4 class="sidebar-title">Plan Your Visit</h4>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @* <form asp-action="Bookmark" method="post">
                                <input type="hidden" name="placeId" value="@Model.Id" />
                                <button type="submit" class="btn btn-gold w-100 mb-3 py-2 rounded-pill">
                                    <i class="far fa-bookmark me-2"></i> Save to Bookmarks
                                </button>
                            </form>
                            <button class="btn btn-outline-custom w-100 py-2 rounded-pill">
                                <i class="fas fa-plus me-2"></i> Add to Trip Plan
                            </button> *@
                        }
                        else
                        {
                            <p class="text-muted text-center mb-3">Login to save this place to your wishlist.</p>
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-primary w-100 rounded-pill">Login Now</a>
                        }
                    </div>

                    <div class="sidebar-card">
                        <h4 class="sidebar-title">Location</h4>
                        <div class="map-frame" style="height: 300px;">
                            <iframe width="100%" height="100%" frameborder="0" style="border:0"
                                    src="https://www.google.com/maps?q=@mapQuery&output=embed"
                                    allowfullscreen>
                            </iframe>
                        </div>
                        <div class="mt-3 text-muted small">
                            <i class="fas fa-map-pin me-1"></i> @Model.Address
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div> <!-- End of Main Wrapper -->
    <!-- FOOTER -->
    <footer style="font-family: 'Poppins', sans-serif; color:#eaf4f9; background-color:#0e1a24; padding-top:30px;">
        <div class="lowerparent" style="text-align:center; padding:20px 0; font-size:14px;">
            <p>Copyright © 2025 Morshed.com | Crafted with <i class="fa-solid fa-heart fa-beat" style="color:var(--gold);"></i></p>
        </div>
    </footer>

    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>